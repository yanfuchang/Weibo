<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yyweibo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.yyweibo.weibo.zongti.weibo.BaesApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.yyweibo.weibo.zongti.weibo.activity.LoginActivity"
            android:label="@string/app_name" />
        <activity android:name="com.example.yyweibo.weibo.zongti.weibo.activity.MainActivity" />
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.yyweibo.weibo.zongti.weibo.activity.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.yyweibo.weibo.zongti.weibo.activity.TestActivity" />
        <activity android:name="com.example.yyweibo.weibo.zongti.weibo.activity.StatusDetailActivity" />
        <activity android:name="com.example.yyweibo.weibo.zongti.weibo.activity.WriteStatusActivity" />
        <activity android:name="com.example.yyweibo.weibo.zongti.weibo.activity.WriteCommentActivity" />
        <activity android:name="com.example.yyweibo.weibo.zongti.weibo.activity.UserDetilActivity" />
    </application>

</manifest>